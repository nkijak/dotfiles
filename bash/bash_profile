echo "Appending pyenv to path"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)";
fi


#alias mypath=tr ':' '\n' <<< "$PATH"


if [[ $OSTYPE == darwin* ]]; then
  . ~/.bash_darwin
fi

if [ -f ~/.bashrc ]; then
  . ~/.bashrc
fi

# Source any local files
if [ -f ~/.bash_local ]; then
  . ~/.bash_local
fi


export PATH="$HOME/.poetry/bin:$PATH"
